<%= form_for(@project, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @project.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div><br></br>
  <div class="form-group">
    <%= f.label :deadline, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :deadline, :class => "form-control" %>
    </div>
  </div><br></br>
  <div class="form-group">
    <%= f.label :ideas, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :ideas, :class => "form-control" %>
    </div>
  </div><br></br>
  <div class="form-group">
    <%= f.label :code_higlights, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :code_higlights, :class => "form-control" %>
    </div>
  </div><br></br>
  <div class="form-group">
    <%= f.label :temp_notes, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :temp_notes, :class => "form-control" %>
    </div>
  </div><br></br>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-success" %>
    </div>
  </div>
<% end %>
