<h1>Listing links</h1>
<%= link_to 'Home', tasks_path, {:style=>'color:white;', :class => "btn btn-dirt"} %>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Address</th>
      <th>Notes</th>
      <th>Rank</th>
      <th>Language</th>
      <th>Category</th>
      <th>Visited</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.description %></td>
        <td><%= link.address %></td>
        <td><%= link.notes %></td>
        <td><%= link.rank %></td>
        <td><%= link.language %></td>
        <td><%= link.category %></td>
        <td><%= link.visited %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
